<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Fragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.anton.shopcoffeapp.presentation.fragments.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.anton.shopcoffeapp.presentation.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_to_itemList"
            app:destination="@id/itemListFragment" />

        <action
            android:id="@+id/action_dashboard_to_cart"
            app:destination="@id/cartFragment" />

        <action
            android:id="@+id/action_dashboard_to_itemDetail"
            app:destination="@id/itemDetailFragment" />
    </fragment>

    <!-- Cart Fragment -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.anton.shopcoffeapp.presentation.fragments.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

    <!-- Item List Fragment -->
    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.anton.shopcoffeapp.presentation.fragments.ItemListFragment"
        android:label="Items"
        tools:layout="@layout/fragment_item_list" />

    <!-- Item Detail Fragment -->
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.anton.shopcoffeapp.presentation.fragments.ItemDetailFragment"
        android:label="Item Detail"
        tools:layout="@layout/fragment_detail" />
</navigation>
